{% extends 'layouts/base.html.twig' %}


{% block title %}Forgot password - The shop
{% endblock %}

{% block body %}
	{% for message in app.flashes('notification') %}
		<div class="alert alert-info text-center col-md-6 mx-auto">{{ message }}</div>
	{% endfor %}

	<div class="row">
		<div class="col-md-6 mx-auto">
			<form method="post">
				<h1 class="h3 mb-3 font-weight-normal">Reset password</h1>
				<label for="inputEmail">Email</label>
				<input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Your email" required autofocus>
				<button class="btn btn-primary btn-block mt-3" type="submit">
					Reset password
				</button>
				<p class="mt-3 text-center">Already have an account?<a href="{{ path('app_login') }}">Log in</a>
				</p>
			</form>
		</div>
	</div>

{% endblock %}
