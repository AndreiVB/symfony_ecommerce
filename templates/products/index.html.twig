{% extends 'base.html.twig' %}

{% block title %}The shop - Our products
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-md-3">
			<h1 class="h3 mb-3">Filter</h1>
			{{ form(form) }}
			</div>
			<div class="col-md-9">
				<h1 class="h3 mb-3 text-center">Our products</h1>

				<div class="row">
					{% for product in products %}
						<div class="col-md-4 text-center mb-5">
							<div class="border-top-0 border border-light bg-light">
								<a href="{{ path('app_product_show', {'slug' : product.slug }) }}"><img src="/uploads/{{product.illustration}}" alt="product.name" class="img-fluid"></a>
								<h5 class="text-capitalize">{{product.name}}</h5>
								<span class="text-muted d-block">{{product.subtitle}}</span>
								<span>{{(product.price / 100)|number_format(2, ',', ',') }}
									â‚¬</span>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>


	{% endblock %}
