{% extends 'base.html.twig' %}

{% block title %}Contact us - The Shop
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-md-9 mx-auto text-center">
			<h1 class="h2">Contact us</h1>
			<p>Have a question? We would love to hear it. Send us a message and we will respond as soon as possible</p>
		</div>
	</div>

	{% for message in app.flashes('notification') %}
