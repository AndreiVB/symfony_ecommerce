	{% endfor %}


	<div class="row">
		<div class="col-md-7">
			{{form(form)}}
			</div>

			<div class="col-md-5 text-center">
				<p>The Shop</p>
				<hr>

				<p>Call us:
					<a href="tel:0606060606">0606060606</a>
				</p>
				<p>13 Fleet Street, 23555 Dream Town.</p>
				<p>contact@TheShopProject.space</p>
			</p>

		</div>
	</div>

{% endblock %}
